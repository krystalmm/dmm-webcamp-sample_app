<% provide(:title, "Edit") %>

<%= form_with model: @list, url: "/todolists/#{@list.id}", local: true do |f| %>
  <div class="form">
    <div class="form-style">
      <h4 class="form-head">Title</h4>
      <%= f.text_field :title %>
      <h4 class="form-head">Body</h4>
      <%= f.text_area :body %>
      <div class="form-submit">
        <%= f.submit '保存' %>
      </div>
    </div>
  </div>
<% end %>
